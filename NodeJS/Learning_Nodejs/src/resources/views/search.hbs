<div class="mt-4">
    <form method = "POST">
        <div class="form-group">
            <label for="search-input">Searching</label>
            <input type="text" name = "word" class="form-control mt-2" placeholder="Enter keyword">
            <input type="text" name = "name" class="form-control mt-2" placeholder="Enter your name">
            <input type="text" name = "age" class="form-control mt-2" placeholder="Enter your age">
        </div>
        <div class="form-group">
            <label for="gender-input">Gender</label>
            <select name="gender" class="form-control">--select gender
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>